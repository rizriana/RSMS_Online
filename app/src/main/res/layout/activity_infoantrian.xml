<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <androidx.cardview.widget.CardView
        android:id="@+id/asd123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/asd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nomor Antrian Saat Ini" />

            <TextView
                android:id="@+id/tvnomorsaatini"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/asd"
                android:gravity="center"
                android:text="C1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="50dp"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/asd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asd123"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:text="Daftar Antrian Yang Anda Miliki :" />

    <ListView
        android:id="@+id/myList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asd2"
        android:background="#fff" />

    <TextView
        android:id="@+id/tvIduser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#edeaea"
        android:textSize="0.1dp" />

    <TextView
        android:id="@+id/tvidpasien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#edeaea"
        android:textSize="0.1dp" />

    <TextView
        android:id="@+id/tvnomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#edeaea"
        android:textSize="0.1dp" />

    <TextView
        android:id="@+id/tvidklinik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#edeaea"
        android:textSize="0.1dp" />

    <TextView
        android:id="@+id/tvnomortelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#edeaea"
        android:textSize="0.1dp" />

    <LinearLayout
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" />

</RelativeLayout>